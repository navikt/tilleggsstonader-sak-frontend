{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/frontend/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
